{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    // Style
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-after-keywords": 2,

    // ES6
    "no-var": 2
  }
}
